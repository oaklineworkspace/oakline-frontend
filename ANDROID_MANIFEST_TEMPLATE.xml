<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oakline.bank">

    <!-- Internet access for WebView and API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Verify network connectivity -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- (Optional) For deep linking and external URLs -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    
    <!-- NOT REQUIRED:
         - android.permission.CAMERA (unless you add ID verification)
         - android.permission.ACCESS_FINE_LOCATION (WebView doesn't need precise location)
         - android.permission.READ_CONTACTS (not needed for banking app)
         - android.permission.ACCESS_COARSE_LOCATION (not needed)
    -->

    <application
        android:allowBackup="false"
        android:debuggable="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="false">

        <!-- MainActivity - Capacitor app entry point -->
        <activity
            android:name="com.getcapacitor.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Deep linking support (optional) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="theoaklinebank.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <!-- Capacitor Plugins -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Network Security Configuration -->
        <domain-config cleartextTrafficPermitted="false">
            <domain includeSubdomains="true">theoaklinebank.com</domain>
            <domain includeSubdomains="true">api.theoaklinebank.com</domain>
        </domain-config>

    </application>

    <!-- Minimum and Target SDK Requirements -->
    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

</manifest>
